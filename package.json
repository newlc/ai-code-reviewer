{
  "name": "ai-code-reviewer",
  "version": "1.0.0",
  "description": "Automated AI-powered code review for your pull requests",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js",
    "build:watch": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "github-action",
    "code-review",
    "ai",
    "openai",
    "anthropic",
    "gemini",
    "grok",
    "ollama"
  ],
  "author": "Anton Bukarev",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.30.1",
    "@google/generative-ai": "^0.21.0",
    "openai": "^4.73.0",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}

